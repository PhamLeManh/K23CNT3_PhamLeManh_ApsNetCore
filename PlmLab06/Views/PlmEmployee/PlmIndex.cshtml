@model List<PlmLab06.Models.PlmEmployee>

<h2>Danh sách nhân viên</h2>

<a asp-action="PlmCreate" class="btn btn-primary mb-3"> Thêm nhân viên</a>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Họ Tên</th>
            <th>Ngày Sinh</th>
            <th>Email</th>
            <th>Điện Thoại</th>
            <th>Lương (VNĐ)</th>
            <th>Trạng Thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.PlmId</td>
                <td>@emp.PlmName</td>
                <td>@emp.PlmBirthDay.ToString("dd/MM/yyyy")</td>
                <td>@emp.PlmEmail</td>
                <td>@emp.PlmPhone</td>
                <td>@emp.PlmSalary.ToString("N0")</td>
                <td>
                    @if (emp.PlmStatus)
                    {
                        <span class="badge bg-success">Đang làm</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nghỉ</span>
                    }
                </td>
                <td>
                    <a asp-action="PlmEdit" asp-route-id="@emp.PlmId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="PlmDelete" asp-route-id="@emp.PlmId" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa nhân viên này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
