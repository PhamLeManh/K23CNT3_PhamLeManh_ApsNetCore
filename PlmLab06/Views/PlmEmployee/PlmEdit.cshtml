@model PlmLab06.Models.PlmEmployee

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<form asp-action="PlmEdit" method="post">
    @Html.HiddenFor(m => m.PlmId)

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="mb-4 text-primary">
                <i class="bi bi-person-lines-fill"></i> Thông tin nhân viên
            </h4>

            <div class="mb-3">
                <label asp-for="PlmName" class="form-label fw-semibold">Họ tên</label>
                <input asp-for="PlmName" class="form-control" placeholder="Nhập họ tên..." />
                <span asp-validation-for="PlmName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlmBirthDay" class="form-label fw-semibold">Ngày sinh</label>
                <input asp-for="PlmBirthDay" type="date" class="form-control" />
                <span asp-validation-for="PlmBirthDay" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlmEmail" class="form-label fw-semibold">Email</label>
                <input asp-for="PlmEmail" type="email" class="form-control" placeholder="ví dụ: email@abc.com" />
                <span asp-validation-for="PlmEmail" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlmPhone" class="form-label fw-semibold">Điện thoại</label>
                <input asp-for="PlmPhone" class="form-control" placeholder="Ví dụ: 0799079636" />
                <span asp-validation-for="PlmPhone" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PlmSalary" class="form-label fw-semibold">Lương (VNĐ)</label>
                <input asp-for="PlmSalary" class="form-control" placeholder="Nhập lương..." />
                <span asp-validation-for="PlmSalary" class="text-danger small"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="PlmStatus" class="form-check-input" id="statusCheck" />
                <label class="form-check-label fw-semibold" for="statusCheck">
                    @Html.DisplayNameFor(m => m.PlmStatus)
                </label>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="PlmIndex" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg"></i> Xác nhận
                </button>
            </div>
        </div>
    </div>
</form>
