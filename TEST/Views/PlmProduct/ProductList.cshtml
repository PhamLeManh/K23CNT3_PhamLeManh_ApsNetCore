@model List<TEST.Controllers.ProductViewModel>
@{
    ViewData["Title"] = ViewData["CategoryTitle"] ?? "Sản phẩm";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary fw-bold">@ViewData["CategoryTitle"]</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@product.ImageUrl"
                         class="card-img-top"
                         alt="@product.Name"
                         style="height: 300px; object-fit: cover;"
                         loading="lazy">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-dark">@product.Name</h5>
                        <p class="card-text text-danger fw-semibold">@String.Format("{0:N0} VNĐ", product.Price)</p>
                        <a asp-action="Detail"
                           asp-route-id="@product.Id"
                           class="btn btn-primary mt-auto rounded-pill px-4">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>