@model IEnumerable<PlmLesson07.Models.PlmEmployee>

@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

<p>
    <a asp-action="PlmCreate" class="btn btn-success"> Thêm mới</a>
</p>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.PlmId)</th>
            <th>@Html.DisplayNameFor(model => model.PlmName)</th>
            <th>@Html.DisplayNameFor(model => model.PlmBirthDay)</th>
            <th>@Html.DisplayNameFor(model => model.PlmEmail)</th>
            <th>@Html.DisplayNameFor(model => model.PlmPhone)</th>
            <th>@Html.DisplayNameFor(model => model.PlmSalary)</th>
            <th>@Html.DisplayNameFor(model => model.PlmStatus)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.PlmId</td>
                <td>@item.PlmName</td>
                <td class="text-center">@item.PlmBirthDay.ToString("dd/MM/yyyy")</td>
                <td>@item.PlmEmail</td>
                <td>@item.PlmPhone</td>
                <td class="text-end">@item.PlmSalary.ToString("N0") đ</td>
                <td class="text-center">
                    @if (item.PlmStatus)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="PlmEdit" asp-route-id="@item.PlmId" class="btn btn-sm btn-primary me-1">Sửa</a>
                    
                    <a asp-action="PlmDelete" asp-route-id="@item.PlmId" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
