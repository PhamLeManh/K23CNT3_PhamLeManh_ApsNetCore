@model IEnumerable<PlmLesoon10.Models.Category>
@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Views/Shared/_PlmLayout.cshtml";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm mới</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CateId</td>
                <td>@item.CateName</td>
                <td>@item.CateStatus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CateId" class="btn btn-sm btn-primary">✏ Sửa</a>

                    <a asp-action="Details" asp-route-id="@item.CateId" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.CateId" class="btn btn-sm btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
