@{
    ViewData["Title"] = "PlmProfile";
    var account = ViewBag.account as PlmLesson03.Models.PlmAccount;
}

<h2>Your Profile</h2>

<div class="row">
    <div class="col-md-4">
        <img src="@account?.Avatar" alt="Avatar" style="width: 100%; border-radius: 12px;" />
    </div>
    <div class="col-md-8">
        <h3>Full Name: @account?.Name</h3>
        <h4>Email: @account?.Email</h4>
        <h4>Phone: @account?.Phone</h4>
        <h4>Address: @account?.Address</h4>
        <h4>Bio: @account?.Bio</h4>
        <h4>Gender: @(account?.Gender == 1 ? "Female" : "Male")</h4>
        <h4>Birthday: @account?.Birthday.ToString("dd/MM/yyyy")</h4>

        <p class="mt-3">
            <a asp-controller="PlmAccount" asp-action="PlmIndex" class="btn btn-danger btn-sm">
                Back To List
            </a>
        </p>
    </div>
</div>