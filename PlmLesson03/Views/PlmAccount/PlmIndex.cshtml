@model List<PlmLesson03.Models.PlmAccount>

@{
    ViewData["Title"] = "PlmIndex";
}

<style>
    .avatar-card {
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.2s;
        background-color: #fff;
    }

        .avatar-card:hover {
            transform: scale(1.02);
        }

    .avatar-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 10px;
        border: 3px solid #6c757d;
    }

    .btn-profile {
        margin-top: 10px;
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var account in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="avatar-card">
                    <img src="@account.Avatar" alt="@account.Name" class="avatar-img" />
                    <h4>@account.Name</h4>
                    <p class="text-muted">@account.Email</p>
                    <a asp-route="profile" asp-route-id="@account.Id" class="btn btn-success btn-profile">
                        View Profile
                    </a>
                </div>
            </div>
        }
    </div>
</div>
