@model IEnumerable<PhamLeManh_2310900063.Models.PlmEmployee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<!-- Nút Thêm mới -->
<div class="mb-3">
    <a asp-action="PlmCreate" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm nhân viên
    </a>
</div>

<!-- Bảng danh sách -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã NV</th>
                <th>Tên NV</th>
                <th>Cấp bậc</th>
                <th>Ngày bắt đầu</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PlmEmpId</td>
                    <td>@item.PlmEmpName</td>
                    <td>@item.PlmEmpLevel</td>
                    <td>@item.PlmEmpStartDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(item.PlmEmpStatus ? "bg-success" : "bg-secondary")">
                            @(item.PlmEmpStatus ? "Đang làm" : "Nghỉ việc")
                        </span>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <!-- Nút Xem -->
                            <a asp-action="PlmDetails" asp-route-id="@item.PlmEmpId"
                               class="btn btn-info btn-sm" title="Xem chi tiết">
                                <i class="fas fa-eye"></i> Xem
                            </a>

                            <!-- Nút Sửa -->
                            <a asp-action="PlmEdit" asp-route-id="@item.PlmEmpId"
                               class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                <i class="fas fa-edit"></i> Sửa
                            </a>

                            <!-- Nút Xóa -->
                            <a asp-action="PlmDelete" asp-route-id="@item.PlmEmpId"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');"
                               title="Xóa">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
